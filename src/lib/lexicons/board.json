{
  "lexicon": 1,
  "id": "dev.skyboard.board",
  "defs": {
    "main": {
      "type": "record",
      "description": "A kanban board",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["name", "columns", "createdAt"],
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 256,
            "description": "Name of the board"
          },
          "description": {
            "type": "string",
            "maxLength": 2048,
            "description": "Optional description of the board"
          },
          "columns": {
            "type": "array",
            "minLength": 1,
            "maxLength": 20,
            "items": { "type": "ref", "ref": "#column" },
            "description": "Columns in this board"
          },
          "labels": {
            "type": "array",
            "maxLength": 50,
            "items": { "type": "ref", "ref": "#label" },
            "description": "Labels available on this board"
          },
          "open": {
            "type": "boolean",
            "description": "Whether the board is open (anyone can propose tasks/comments) or closed (trusted only)"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "When the board was created"
          }
        }
      }
    },
    "column": {
      "type": "object",
      "required": ["id", "name", "order"],
      "properties": {
        "id": {
          "type": "string",
          "description": "TID identifier for the column"
        },
        "name": {
          "type": "string",
          "maxLength": 256,
          "description": "Name of the column"
        },
        "order": {
          "type": "integer",
          "minimum": 0,
          "description": "Sort order of the column"
        }
      }
    },
    "label": {
      "type": "object",
      "required": ["id", "name", "color"],
      "properties": {
        "id": {
          "type": "string",
          "description": "TID identifier for the label"
        },
        "name": {
          "type": "string",
          "maxLength": 256,
          "description": "Name of the label"
        },
        "color": {
          "type": "string",
          "maxLength": 32,
          "description": "Color of the label (hex code)"
        },
        "description": {
          "type": "string",
          "maxLength": 1024,
          "description": "Optional description of the label"
        }
      }
    }
  }
}
